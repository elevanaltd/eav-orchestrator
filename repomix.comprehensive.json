{
  "output": {
    "filePath": ".coord/context/comprehensive-context.xml",
    "style": "xml",
    "parsableStyle": false,
    "compress": false,
    "headerText": "EAV Orchestrator Comprehensive Context for Deep Analysis",
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 50,
    "showLineNumbers": true,
    "copyToClipboard": false,
    "includeEmptyDirectories": false,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "docs/**/*.md",
    "tests/**/*.test.ts",
    "*.md",
    "package.json",
    "tsconfig.json",
    "vite.config.ts",
    "supabase/**/*.sql"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "node_modules/**",
      "dist/**",
      "coverage/**",
      "*.log",
      ".coord/context/*.xml"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
